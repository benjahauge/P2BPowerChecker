<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P2BPowerChecker.AddPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="phoneEntry" Placeholder="Enter Phone Number"/>
            <Entry x:Name="messageEntry" Placeholder="Enter Message for SMS"/>
            <Button Text="Add" Clicked="OnSaveButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>